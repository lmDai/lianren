<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="164dp"
    android:layout_height="267dp"
    android:layout_marginTop="@dimen/space_16"
    android:layout_marginRight="@dimen/space_16"
    android:orientation="vertical">

    <com.lianren.android.widget.RoundImageView
        android:id="@+id/img_avater"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_placeholder"
        app:borderRadius="@dimen/space_4"
        app:bottom_left="false"
        app:bottom_right="false"
        app:top_left="true"
        app:top_right="true"
        app:type="round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_avater"
        android:background="@drawable/bg_bottom_corner"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_6"
        android:paddingTop="@dimen/space_8"
        android:paddingRight="@dimen/space_6"
        android:paddingBottom="@dimen/space_8">

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_avater"
            android:background="@drawable/bg_bottom_corner"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/lay_2"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12"
            tools:text="喜欢落魄风，吃货，爱旅游喜欢落魄风，吃货，爱旅游喜欢落魄风，
        吃货，爱旅游喜欢落魄风，吃货，爱旅游喜欢落魄风，吃货，爱旅游" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_avater"
            android:layout_marginTop="@dimen/space_3"
            android:background="@drawable/bg_bottom_corner"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/lay_2"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_10"
            tools:text="喜欢落魄风，吃货，爱旅游喜欢落魄风，吃货，爱旅游喜欢落魄风，
        吃货，爱旅游喜欢落魄风，吃货，爱旅游喜欢落魄风，吃货，爱旅游" />
    </LinearLayout>

</LinearLayout>