<?xml version="1.0" encoding="utf-8"?>
<net.oschina.common.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/lay_4"
    app:oscAccordTo="width">

    <com.lianren.android.widget.RoundImageView
        android:id="@+id/iv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:background="#dadada"
        android:contentDescription="@string/app_name"
        android:padding="0dp"
        android:src="@mipmap/ic_squre_placeholder"
        app:borderRadius="@dimen/space_4"
        app:bottom_left="true"
        app:bottom_right="true"
        app:top_left="true"
        app:top_right="true"
        app:type="round" />

    <ImageView
        android:id="@+id/iv_is_gif"
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_gravity="right|bottom"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:scaleType="centerInside"
        android:src="@mipmap/gif"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/space_16"
        android:layout_height="@dimen/space_16"
        android:layout_gravity="right|top"
        android:contentDescription="@string/app_name"
        android:paddingTop="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_tweet_delete" />
</net.oschina.common.widget.SquareLayout>