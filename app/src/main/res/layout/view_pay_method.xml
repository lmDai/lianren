<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_wxpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_material"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@mipmap/wehat_ico"
            android:tint="@color/day_colorPrimary" />

        <TextView
            android:id="@+id/tv_pay_wxpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:minWidth="80dp"
            android:minHeight="50dp"
            android:text="微信支付"
            android:textColor="@color/day_colorPrimary"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <View style="@style/h_line" />

    <LinearLayout
        android:id="@+id/layout_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_material"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@mipmap/zhi_ico"
            android:tint="@color/day_colorPrimary" />

        <TextView
            android:id="@+id/tv_pay_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:minWidth="80dp"
            android:minHeight="50dp"
            android:text="支付宝支付"
            android:textColor="@color/day_colorPrimary"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_material"
        android:gravity="center"
        android:minHeight="50dp"
        android:text="取消"
        android:textColor="@color/day_colorPrimary"
        android:textSize="@dimen/font_14" />
</LinearLayout>