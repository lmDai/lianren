<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="318dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_dialog"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="130dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="用户隐私概要"
                android:textColor="#FF101010"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:lineSpacingExtra="5dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:text="链人是一款由我们提供服务的社交产品，为说明我们如何收集、使用和存储您的个人信息及您享有哪些权利，我们将通过《隐私政策》向您说明。在您使用链人前，请务必认真阅读 《 链人用户协议 》 及 《 隐私政策 》 ，尤其是： 1 、为帮助您使用链人提供的服务、注册账户、与好友互动、交流沟通，我们会收集您的部分必要信息； 2 、为提供上述服务，我们可能会收集您的身份信息、联络方式、位置等敏感信息，您有权拒绝或撤回授权； 3 、未经您的同意，我们不会从第三方获取、共享或对外提供您的个人信息。如我们使用您的个人信息，超出了与收集时所称的目的及具有直接或合理关联范围，我们将在使用您的个人信息前，再次向您告知并征得您的明示同意。"
                    android:textColor="#FF5B5858"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="查看完整"
                        android:textColor="#FF5B5858"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="《链人用户协议》"
                        android:textColor="@color/day_colorPrimary"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="及"
                        android:textColor="#FF5B5858"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="《隐私政策》"
                        android:textColor="@color/day_colorPrimary"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPositiveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:minWidth="80dp"
                android:minHeight="40dp"
                android:text="不同意"
                android:textColor="#FF101010"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNegativeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_corner_5"
                android:gravity="center"
                android:minWidth="80dp"
                android:minHeight="40dp"
                android:text="同意"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>